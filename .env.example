# CarGPT Backend Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
CARGPT_DB_NAME=ads_db
CARGPT_DB_USER=adsuser
CARGPT_DB_PASSWORD=pass
CARGPT_DB_HOST=localhost
CARGPT_DB_PORT=5432

CONVERSATIONS_TABLE_NAME=conversations
ADS_TABLE_NAME=ads

ADS_DB_MCP_SERVER_PORT=8001
CARGPT_ADS_DB_MCP_SERVER_URL="http://localhost:${ADS_DB_MCP_SERVER_PORT}/mcp"

# Perplexity MCP Server Configuration
PERPLEXITY_MCP_SERVER_PORT=8002
CARGPT_PERPLEXITY_MCP_SERVER_URL="http://localhost:${PERPLEXITY_MCP_SERVER_PORT}/mcp"
PERPLEXITY_API_KEY="..."

REQUEST_TIMEOUT_SECONDS=60

# Application Configuration
UVICORN_RELOAD=true
UVICORN_WORKERS=1
LOG_LEVEL=info

# PgAdmin Configuration (optional)
PGLADMIN_DEFAULT_EMAIL=admin@cargpt.com
PGLADMIN_DEFAULT_PASSWORD=admin123

# Production Database Password (override for production)
POSTGRES_PASSWORD=your_secure_password_here

OPENAI_API_KEY=...
CHAT_MODEL="gpt-4o"

BACKEND_PORT=8000
BACKEND_URL="http://localhost:${BACKEND_PORT}"