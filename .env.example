# CarGPT Backend Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
CARGPT_DB_NAME=ads_db
CARGPT_DB_USER=adsuser
CARGPT_DB_PASSWORD=pass
CARGPT_DB_HOST=localhost
CARGPT_DB_PORT=5432

# Application Configuration
UVICORN_RELOAD=true
UVICORN_WORKERS=1
LOG_LEVEL=info

# PgAdmin Configuration (optional)
PGLADMIN_DEFAULT_EMAIL=admin@cargpt.com
PGLADMIN_DEFAULT_PASSWORD=admin123

# Production Database Password (override for production)
POSTGRES_PASSWORD=your_secure_password_here

OPENAI_API_KEY=...