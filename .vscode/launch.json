{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend/src"
            },
            "justMyCode": true,
            "stopOnEntry": false,
            "envFile": "${workspaceFolder}/backend/.env"
        }
    ]
}